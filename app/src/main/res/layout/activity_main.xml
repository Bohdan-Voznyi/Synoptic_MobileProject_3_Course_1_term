<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E333C"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 1. Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E333C"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            app:title="" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. Головний контент -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Поточна погода -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kiev"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10°"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWeatherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drizzle"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <!-- Видимість -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#40454E"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visibility"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 ми"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"/>
                    <TextView
                        android:id="@+id/tvVisibilityDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Видимость снижена из-за легкой дымки."
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Прогноз на 5 днів -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПРОГНОЗ"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/forecast_item"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                />

            <!-- Якість повітря (AQI) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ЯКІСТЬ ПОВІТРЯ"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#40454E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAqiIcon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="AQI"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/background_aqi_default" />

                        <TextView
                            android:id="@+id/tvAqiLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            tools:text="Добре" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2E333C"
                        android:layout_marginVertical="16dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:useDefaultMargins="true">

                        <!-- PM2.5 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PM2.5"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiPM25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="10.5"/>
                        </LinearLayout>

                        <!-- PM10 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PM10"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiPM10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="15.2"/>
                        </LinearLayout>

                        <!-- SO₂ -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SO₂"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiSO2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="2.1"/>
                        </LinearLayout>

                        <!-- NO₂ -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NO₂"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiNO2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="5.5"/>
                        </LinearLayout>

                        <!-- O₃ -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O₃"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiO3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="70.1"/>
                        </LinearLayout>

                        <!-- CO -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp">
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CO"
                                style="@style/AqiComponentTitle"/>
                            <!-- ✅ ВИПРАВЛЕНО: Додано layout_width/height -->
                            <TextView
                                android:id="@+id/tvAqiCO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/AqiComponentValue"
                                tools:text="200.0"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

